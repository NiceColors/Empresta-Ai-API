{
    "openapi": "3.0.0",
    "info": {
        "title": "Empresta AÃ­ Documentation",
        "description": "This is an API of Books",
        "version": "1.0.0",
        "contact": {
            "email": "victorbtst77@gmail.com"
        }
    },
    "paths": {
        "/sessions": {
            "get": {
                "tags": ["Sessions"],
                "summary": "Create a session",
                "description": "Create a new session",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "example": {
                                "email": "admin@admin",
                                "password": "123456"
                            }
                        }
                    }
                }
            }
        },
        "/books": {
            "post": {
                "tags": ["Books"],
                "summary": "Create a book",
                "description": "Create a new book",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "author": {
                                        "type": "string"
                                    }
                                }
                            },
                            "example": {
                                "name": "Book name sample",
                                "description": "Book description sample"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Book"
                    },
                    "500": {
                        "description": "Book Already Exists"
                    }
                }
            },

            "get": {
                "tags": ["Books"],
                "summary": "List books",
                "description": "Lista all books",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
